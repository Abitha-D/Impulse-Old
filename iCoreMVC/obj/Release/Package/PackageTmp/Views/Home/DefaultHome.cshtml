    <script>
        function doc_keyUp(e) {

            if (e.ctrlKey && e.keyCode == 81) {
                parent.UserLock();
            }
        }

        document.addEventListener('keyup', doc_keyUp, false);

        function sendMail()
        {
            var isValidated =  validateEmail($('#txtToMail').val())

            if(isValidated != true)
            {
                alert("Invalid Mail ID");

                return;
            }

            var sMailTo = $('#txtToMail').val(); //'ramkfaizi97@gmail.com';

            //var sMailCC = 'ramkfaizi97@gmail.com';

            var sMailSub = $('#txtSubject').val(); //'Invoice for ' + invMonth + ' Month';

            var sMailBody = getMailTemplate();
            
            var StrJsonDatas = eval({
                mail_to: sMailTo,
                mail_subject: sMailSub,
                mail_body: sMailBody
            });

            var Result = oAPICall.Sendmail(StrJsonDatas, 'SendMail'); //sendmail

            if (Result == "Mail send sucessfully..")
            {
                $('#mailSuccess').removeClass('hidden');

                $('#txtToMail').val("");

                $('#txtSubject').val("");

                $('#txtBody').val("");

                setInterval(function () {
                    $('#mailSuccess').addClass('hidden');
                }, 10000);
            }
            else
            {
                $('#mailError').removeClass('hidden');
            }
        }

        function getMailTemplate() {

            var Condition = ' where mail_type = 11 '; // mail type 11 for Sending Default Mail
            var strJsonDatas = eval({ strCondition: Condition, strFieldNames: null, strSessionID: UserSession });
            var Result = oAPICall.SelectData(strJsonDatas, "SelectEmailTemplate");

            if (Result != null || Result != '') {

                var sMailData = Result[0].mail_body;

                document.getElementById('MailData').innerHTML = sMailData;
                document.getElementById('content').innerHTML = $('#txtBody').val();
                document.getElementById('empName').innerHTML = fullName;
                document.getElementById('empRole').innerHTML = rolename;

            }
            return document.getElementById('MailData').innerHTML;
        }

        var refNo,roleID,fullName,rolename;

        function GetEmployeeDetail()
        {
            var Condition = ' where emp_ref_no = '+ refNo ; // mail type 10  is Sendind Due Reminder
            var strJsonDatas = eval({ strCondition: Condition, strFieldNames: null, strSessionID: UserSession });
            var Result = oAPICall.SelectData(strJsonDatas, "SelectEmployeeDetails");

            if (Result != null || Result != '') {

                fullName = Result[0].emp_full_name;

                if(roleID != 1)
                {
                    var str = Result[0].role_name.split("(");
  
                    rolename = str[1].replace(")", "");
                }
                else
                {
                    rolename = Result[0].role_name;
                }
            }
        }

        var oAPICall;
        
        $(document).ready( function(){

            oAPICall = new APICall();
        
            var sUserDetails = @Html.Raw(Json.Encode(@ViewBag.userDetails));

            refNo = sUserDetails.EmployeeId;

            roleID = sUserDetails.RoleId;

            GetEmployeeDetail();
        
        });


