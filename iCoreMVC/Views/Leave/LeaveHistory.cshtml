<script>
        function GetNofDays()
        {
            var frmDt = $('#txtfromdt').val();

            var toDt = $('#txtTodate').val();

            var fDate = new Date(frmDt);

            var tDate = new Date(toDt);

            var res = Math.abs(tDate - fDate) / 1000;
            var days = Math.floor(res / 86400);


            days = days + 1;
            //alert(days);

            $('#txttotal').val(days);

            if(days !=1)
            {
                $("#DayHalf").addClass('hidden');
            }
            else{
                $("#DayHalf").removeClass('hidden');
            }
        }

        var refNo, roleId;

        function doc_keyUp(e) {

            if (e.ctrlKey && e.keyCode == 81) {
                parent.UserLock();
            }
        }

        document.addEventListener('keyup', doc_keyUp, false);

        function GetLeaveHistory()
        {
            var EmprefNo = $('#ddlEmployee').val();

            angular.element(document.getElementById('controllerID')).scope().MyLeaveHistory(EmprefNo,1);

        }

        var leaveEntrRefNo = 0;
	//for attendance
        function openCancelModel(leaveRefNo)
        {
            leaveEntrRefNo = leaveRefNo.id;
        }

        function CancelLeave()
        {
            var cancelReason = $("#txtCancelReason").val();

            if(cancelReason == "" && cancelReason == null)
            {
                msgalert("Error", "Please enter a valid reason for cancelling the leave", 3);

                return;
            }

            angular.element(document.getElementById('controllerID')).scope().CancelApprovedLeave(leaveEntrRefNo,cancelReason, refNo);
        }
        //for attendnace ends

