            if (type == null || type == "") {
                type = "";
            }
            else if (type == 1) { type = "success" }
            else if (type == 2) { type = "warning" }
            else if (type == 3) { type = "error" }

            parent.swal({
                title: "" + title + "",
                text: "" + text + "",
                type: "" + type + ""
            });
