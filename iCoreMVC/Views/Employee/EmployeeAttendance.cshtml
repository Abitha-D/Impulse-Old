        function fetchAttendanceData(empRefNo, callback) {
            $.ajax({
                url: 'http://13.202.88.154/Impulse_Attendance/api/Attendance/GetAllTodayAttendances',
                method: 'POST',
                data: { emp_Ref_No: empRefNo },
                success: function(response) {
                    callback(response.attendanceRecord);
                },
                error: function(error) {
                    console.error("Error fetching attendance data:", error);
