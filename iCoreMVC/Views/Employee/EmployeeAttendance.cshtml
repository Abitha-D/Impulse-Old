        function updateModalContent(attendanceData) {
            var punchInTime = attendanceData[0].login_Time;
            var punchOutTime = attendanceData[0].logout_Time;

            var punchInDate = new Date(punchInTime);
            var punchOutDate = new Date(punchOutTime);

            var options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' };

            // Update the punch in time
            $(".modal-body .punch-det p:nth-child(2)").text(punchInDate.toLocaleString('en-US', options));

            // Update the punch out time
            $(".modal-body .punch-det:last-child p:nth-child(2)").text(punchOutDate.toLocaleString('en-US', options));

            // Update the activity list
            var activityList = $(".modal-body .res-activity-list:first");
            activityList.empty(); // Clear the existing list

            attendanceData.forEach(function(record) {
                var punchInItem = '<li>' +
                    '<p class="mb-0">Punch In at</p>' +
                    '<p class="res-activity-time">' +
                        '<i class="fa fa-clock-o"></i> ' + new Date(record.login_Time).toLocaleString('en-US', options) +
                    '</p>' +
                '</li>';
                var punchOutItem = '<li>' +
                    '<p class="mb-0">Punch Out at</p>' +
                    '<p class="res-activity-time">' +
                        '<i class="fa fa-clock-o"></i> ' + new Date(record.logout_Time).toLocaleString('en-US', options) +
                    '</p>' +
                '</li>';
                activityList.append(punchInItem + punchOutItem);
            });
        }

