        function toggleDivView() {
            $('#viewWHandOT').removeClass('hidden');
            // Hide other views
            $('#Attendanceview').addClass('hidden');
            $('#attendanceEdit').addClass('hidden');

            var week = 1;
            $('#viewWHandOT #ddlWeek').val(week).change();

            // Use AngularJS to update the view visibility
            var angularElement = angular.element('#viewWHandOT');
            var scope = angularElement.scope();

            if (scope) {
                // Update the AngularJS model to show the view and set the week
                scope.$apply(function() {
                    scope.isViewVisible = true;
                    scope.selectedWeek = 1; // Set the desired week
                    // Get the current date
                    var currentDate = new Date();
                    var currentYear = currentDate.getFullYear();
                    var currentMonth = currentDate.getMonth() + 1; // getMonth() returns month from 0-11

                    // Initialize the selected year and month with current values
                    scope.selectedYear = currentYear.toString();
                    scope.selectedMonth = currentMonth.toString();
                    // No need to manually set the dropdown value; AngularJS will handle it
                });

                // Trigger the search button click
                $('#viewWHandOTSearch').click();
            } else {
                console.error('AngularJS scope is not available');
            }

            
        }

